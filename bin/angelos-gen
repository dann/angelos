#!/usr/bin/env perl
use strict;
use warnings;
#use Carp::Always;
use Pod::Usage;
use Angelos::Script::Generate;

main();

sub main {
    pod2usage(1) unless @ARGV ==2;

    my $flavor_type= $ARGV[0];
    my $module = $ARGV[1];
    Angelos::Script::Generate->run($flavor_type, $module);
}

=head1 NAME

angelos-gen - a simple helper to generate skeltons based on flavor 

=head1 SYNOPSIS

  $ angelos-gen <flavor_type> MyApp

  flator types are "app"

=head1 DESCRIPTION


